{
  "manifest_version": 3,
  "name": "Monkeytype Auto-Refresh + Leaderboard",
  "version": "2.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://monkeytype.com/*", "http://localhost:5050/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://monkeytype.com/*"],
      "js": ["content.js"]
    }
  ]
}
